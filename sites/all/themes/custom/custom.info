

;----------// Theme Information

name = Minh's Custom
description = "Minh's custom theme using Drupal built-in"
core = 7.x
base theme = mbase
release = 7.0
engine = phptemplate
screenshot = screenshot.png


;all style declarations

stylesheets[all][] = css/main.css
stylesheets[all][] = css/responsive.css
stylesheets[all][] = css/color.css


;all scripts declarations

scripts[] = js/libs/bootstrap.min.js
scripts[] = js/libs/bootstrap-hover-dropdown.min.js
scripts[] = js/scripts.js
;Block regions
;all home page regions
regions[header_brown]         = Header brown
regions[content_light_orange] = Content light orange

;site wide regions for non home pages
regions[header]               = Header
regions[highlight]            = Highlight
regions[help]                 = Help
regions[page_top]             = Page top
regions[sidebar_first]        = Sidebar first
regions[sidebar_second]       = Sidebar second
regions[content]              = Main Content
regions[page_bottom]          = Page Bottom
regions[bottom]               = Bottom

;site wide footer regions
regions[footer_social]        = Footer Social
regions[footer_menu]          = Footer Menu


;;;;;;;;;;;;;;;;;;;;;
;; Theme Settings
;;;;;;;;;;;;;;;;;;;;;
;; Enable all the custome blocks generated by cmsbots.com
settings[header_brown_status] = 1
settings[content_light_orange_status] = 1
settings[footer_social_status] = 1
settings[footer_menu_status] = 1


; Basic Settings
settings[toggle_name] = 1
settings[toggle_slogan] = 0
settings[toggle_secondary_menu] = 0

; More Settings
settings[mbase_credits] = 1

; Container
; --------------
settings[mbase_fluid_container] = 0

; Buttons
; --------------
settings[mbase_button_size] = ''
settings[mbase_button_colorize] = 1
settings[mbase_button_iconize] = 1

; Images
; --------------
settings[mbase_image_shape] = ''
settings[mbase_image_responsive] = 1

; Tables
; --------------
settings[mbase_table_bordered] = 1
settings[mbase_table_condensed] = 0
settings[mbase_table_hover] = 1
settings[mbase_table_striped] = 0
settings[mbase_table_responsive] = 1

; Breadcrumbs
; --------------
settings[mbase_breadcrumb] = 1
settings[mbase_breadcrumb_home] = 1
settings[mbase_breadcrumb_title] = 1

; Navbar
; --------------
settings[mbase_navbar_position] = 'fixed-top'
settings[mbase_navbar_inverse] = 0

; Region Wells
; --------------
settings[mbase_region_well-header] = ''
settings[mbase_region_well-navigation] = ''
settings[mbase_region_well-highlighted] = ''
settings[mbase_region_well-help] = ''
settings[mbase_region_well-sidebar_first] = ''
settings[mbase_region_well-sidebar_second] = ''
settings[mbase_region_well-content] = ''
settings[mbase_region_well-footer] = ''
settings[mbase_region_well-footer_copyright] = ''

; Anchors
; --------------
settings[mbase_anchors_fix] = 1
settings[mbase_anchors_smooth_scrolling] = 1

; Forms
; --------------
settings[mbase_forms_required_has_error] = 0
settings[mbase_forms_has_error_value_toggle] = 1
settings[mbase_forms_smart_descriptions] = 1
settings[mbase_forms_smart_descriptions_limit] = 250
settings[mbase_forms_smart_descriptions_allowed_tags] = 'b, code, em, i, kbd, span, strong'

; Popovers
; --------------
settings[mbase_popover_enabled] = 1
settings[mbase_popover_animation] = 1
settings[mbase_popover_html] = 0
settings[mbase_popover_placement] = 'right'
settings[mbase_popover_selector] = ''
settings[mbase_popover_trigger]['hover'] = 0
settings[mbase_popover_trigger]['focus'] = 0
settings[mbase_popover_trigger]['click'] = 'click'
settings[mbase_popover_trigger_autoclose] = 1
settings[mbase_popover_title] = ''
settings[mbase_popover_content] = ''
settings[mbase_popover_delay] = 0
settings[mbase_popover_container] = 'body'

; Tooltips
; --------------
settings[mbase_tooltip_enabled] = 1
settings[mbase_tooltip_animation] = 1
settings[mbase_tooltip_html] = 0
settings[mbase_tooltip_placement] = 'auto left'
settings[mbase_tooltip_selector] = ''
settings[mbase_tooltip_trigger]['hover'] = 'hover'
settings[mbase_tooltip_trigger]['focus'] = 'focus'
settings[mbase_tooltip_trigger]['click'] = 0
settings[mbase_tooltip_delay] = 0
settings[mbase_tooltip_container] = 'body'

